{
  "openapi": "3.0.0",
  "info": {
    "title": "Student & Course API",
    "version": "1.0.0",
    "description": "A CRUD API for managing students and courses with GitHub OAuth authentication"
  },
  "servers": [
    { "url": "/" }
  ],
  "components": {
    "securitySchemes": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "connect.sid",
        "description": "Session cookie from GitHub OAuth login"
      }
    },
    "schemas": {
      "Student": {
        "type": "object",
        "required": ["name", "course", "level"],
        "properties": {
          "_id": {
            "type": "string",
            "description": "MongoDB student ID",
            "example": "507f1f77bcf86cd799439011"
          },
          "name": {
            "type": "string",
            "description": "Student name (minimum 2 characters)",
            "minLength": 2,
            "example": "John Doe"
          },
          "course": {
            "type": "string",
            "description": "Course name",
            "example": "Computer Science"
          },
          "level": {
            "type": "number",
            "description": "Student level (100-500)",
            "minimum": 100,
            "maximum": 500,
            "example": 300
          }
        }
      },
      "Course": {
        "type": "object",
        "required": ["title", "code", "department", "creditUnits", "level", "semester"],
        "properties": {
          "_id": {
            "type": "string",
            "description": "MongoDB course ID",
            "example": "507f1f77bcf86cd799439011"
          },
          "title": {
            "type": "string",
            "description": "Course title",
            "example": "Data Structures and Algorithms"
          },
          "code": {
            "type": "string",
            "description": "Course code (minimum 2 characters)",
            "minLength": 2,
            "example": "CSC301"
          },
          "department": {
            "type": "string",
            "description": "Department offering the course",
            "example": "Computer Science"
          },
          "creditUnits": {
            "type": "number",
            "description": "Credit units (1-6)",
            "minimum": 1,
            "maximum": 6,
            "example": 3
          },
          "level": {
            "type": "number",
            "description": "Course level (100-500)",
            "minimum": 100,
            "maximum": 500,
            "example": 300
          },
          "semester": {
            "type": "string",
            "description": "Semester",
            "enum": ["First", "Second"],
            "example": "First"
          }
        }
      },
      "ValidationError": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "message": {
            "type": "string",
            "example": "Validation failed"
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": ["Student name is required", "Level must be between 100 and 500"]
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "message": {
            "type": "string",
            "example": "An error occurred"
          }
        }
      }
    }
  },
  "security": [
    {
      "cookieAuth": []
    }
  ],
  "paths": {
    "/api/students": {
      "get": {
        "summary": "Get all students",
        "description": "Retrieve a list of all students. Requires authentication.",
        "tags": ["Students"],
        "security": [{"cookieAuth": []}],
        "responses": {
          "200": {
            "description": "List of all students",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Student"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - You do not have access",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "You do not have access!"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new student",
        "description": "Create a new student record. Requires authentication and valid data.",
        "tags": ["Students"],
        "security": [{"cookieAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "course", "level"],
                "properties": {
                  "name": {
                    "type": "string",
                    "minLength": 2,
                    "example": "Jane Smith"
                  },
                  "course": {
                    "type": "string",
                    "example": "Software Engineering"
                  },
                  "level": {
                    "type": "number",
                    "minimum": 100,
                    "maximum": 500,
                    "example": 200
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Student created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Student"
                }
              }
            }
          },
          "400": {
            "description": "Validation error - Invalid or missing required fields",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationError"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - You do not have access",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "You do not have access!"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
